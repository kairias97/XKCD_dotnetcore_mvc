@model ComicNavigationVM
<nav aria-label="Comic navigation">
    <ul class="pagination justify-content-center">
        @if (Model?.PreviousId != null)
        {
            <li class="page-item">
                <a class="page-link" href="/comic/@Model?.FirstId" aria-label="First">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="/comic/@Model?.PreviousId">Previous</a></li>

        }
        @if (Model?.NextId != null)
        {

            <li class="page-item"><a class="page-link" href="/comic/@Model?.NextId">Next</a></li>
            <li class="page-item">
                <a class="page-link" href="/comic/@Model?.LastId" aria-label="Last">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        }

    </ul>
</nav>
